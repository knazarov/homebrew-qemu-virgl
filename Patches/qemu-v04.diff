-    s390_exc = (signalling >> 16) & (fpc >> 24);
-    if (s390_exc) {
-        if (s390_exc & S390_IEEE_MASK_INVALID) {
-            s390_exc = S390_IEEE_MASK_INVALID;
-        } else if (s390_exc & S390_IEEE_MASK_DIVBYZERO) {
