-uint64_t HELPER(cvd)(int32_t reg)
-{
-    /* positive 0 */
-    uint64_t dec = 0x0c;
-    int64_t bin = reg;
-    int shift;
-
-    if (bin < 0) {
-        bin = -bin;
-        dec = 0x0d;
-    }
-
-    for (shift = 4; (shift < 64) && bin; shift += 4) {
-        dec |= (bin % 10) << shift;
-        bin /= 10;
-    }
-
-    return dec;
-}
