-static bool is_afp_reg(int reg)
-{
-    return reg % 2 || reg > 6;
-}
-
-static bool is_fp_pair(int reg)
-{
-    /* 0,1,4,5,8,9,12,13: to exclude the others, check for single bit */
-    return !(reg & 0x2);
-}
