-{
-    int32_t ret, b = b64;
-    int64_t q;
-
-    if (b == 0) {
-        tcg_s390_program_interrupt(env, PGM_FIXPT_DIVIDE, GETPC());
-    }
-
-    ret = q = a / b;
-    env->retxl = a % b;
-
-    /* Catch non-representable quotient.  */
-    if (ret != q) {
-        tcg_s390_program_interrupt(env, PGM_FIXPT_DIVIDE, GETPC());
-    }
-
-    return ret;
