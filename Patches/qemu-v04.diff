-            s390_exc &= (S390_IEEE_MASK_OVERFLOW | S390_IEEE_MASK_INEXACT);
-        } else if (s390_exc & S390_IEEE_MASK_UNDERFLOW) {
-            s390_exc &= (S390_IEEE_MASK_UNDERFLOW | S390_IEEE_MASK_INEXACT);
-        } else if (s390_exc & S390_IEEE_MASK_INEXACT) {
